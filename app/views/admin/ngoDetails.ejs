<%- include('layout/admin') %>

<div class="col-md-12">
         <!-- general form elements -->
         <div class="box box-primary">
           <div class="box-header with-border">
             <h3 class="box-title">Ngo Details</h3>
           </div>
           <!-- /.box-header -->
           <!-- form start -->
           <div class="col-md-2">

           </div>
           <div class="col-md-8">
             <form  action="/admin/ngo_details?_method=PUT" method="post">
               <div class="box-body">
                 <div class="form-group">
                   <label for="">Ngo Name</label>
                   <input type="text" class="form-control" name="name" placeholder="Ngo Name" value="<%= admin.ngo_name %>">
                 </div>

                 <div class="form-group">
                   <label for="">Established In</label>
                   <input class="form-control"  rows="10" name="estd" placeholder="Established In" value="<%= ngo.estd %>">
                 </div>
                 <div class="form-group">
                   <label for="">Field of Work</label>
                   <input class="form-control"  rows="10" name="field" placeholder="Field of work" value="<%= ngo.field %>">
                 </div>
                 <div class="form-group">
                   <label for="">Address</label>
                   <input type="text" class="form-control" name="address" placeholder="Address" value="<%= ngo.address %>">
                 </div>
                 <div class="form-group">
                   <label for="">Country</label>
                   <input type="text" class="form-control" name="country" placeholder="Country" value="<%= ngo.country %>">
                 </div>
                 <div class="form-group">
                   <label for="">Sate</label>
                   <input type="text" class="form-control" name="state" placeholder="Sate" value="<%= ngo.state %>">
                 </div>
                 <div class="form-group">
                   <label for="">City</label>
                   <input type="text" class="form-control" name="city" placeholder="City" value="<%= ngo.city %>">
                 </div>
                 <div class="form-group">
                   <label for="">Pincode</label>
                   <input type="text" class="form-control" name="pincode" placeholder="Pincode" value="<%= ngo.pincode %>">
                 </div>



                           <div class="box-footer">
                 <button type="submit" class="btn btn-primary">Submit</button>
               </div>
             </form>
           </div>

           <div class="col-md-2">

           </div>
         </div>
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="//geodata.solutions/includes/countrystatecity.js"></script>
<%- include('layout/footer') %>
